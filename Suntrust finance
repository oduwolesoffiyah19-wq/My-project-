<script>
let chosenMethod = "";

function showMethod(id){
  document.querySelectorAll(".method-box").forEach(b => b.style.display="none");
  document.getElementById(id).style.display="block";
  chosenMethod = id;
}

function sendInvoice(){
  const fullName = rname.value + " " + rsurname.value;
  const fee = document.getElementById("fee").value;
  const email = document.getElementById("email").value;

  if(!email || !fee || !chosenMethod){
    alert("Please complete all required fields");
    return;
  }

  let methodDetail = "";
  if(chosenMethod === "cash") methodDetail = "CashApp: " + cashapp.value;
  if(chosenMethod === "paypal") methodDetail = "PayPal: " + pp.value;
  if(chosenMethod === "venmo") methodDetail = "Venmo: " + vm.value;
  if(chosenMethod === "gpay") methodDetail = "Google Pay: " + gp.value;
  if(chosenMethod === "apple") methodDetail = "Apple Pay: " + ap.value;
  if(chosenMethod === "payoneer") methodDetail = "Payoneer: " + po.value;

  const invoiceText = `
SUNPAY TRUST

INVOICE

Billed To:
${fullName}

IBAN:
${iban.value}

Payment Method:
${methodDetail}

-------------------------

PAYMENT FEE:
${fee}

-------------------------

This invoice has been issued by SunPay Trust.

SunPay Trust
`;

  const gmail =
    "https://mail.google.com/mail/?view=cm&fs=1" +
    "&to=" + encodeURIComponent(email) +
    "&su=" + encodeURIComponent("Invoice â€“ SunPay Trust") +
    "&body=" + encodeURIComponent(invoiceText);

  window.open(gmail, "_blank");
}
</script>

